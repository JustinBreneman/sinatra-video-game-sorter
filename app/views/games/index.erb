<% if Helpers.is_logged_in?(session) %>
    <button><a href='/games/new'>Add a New Game</a></button>
<% end %>
<% @games.each do |game| %>
    <% user_count = 0 %>
    <% @users.each{|u| if u.games.include?(game) then user_count += 1 end} %>
    <h3><a href='/games/<%= game.slug %>' class='plain_link'>Title: <%= game.title.capitalize %></a></h3>
    <p>Developer: <%= game.developer %></p>
    <p>Release Date: <%= game.release_date %></p>
    <p>Platform: <%= game.platform.name.capitalize %></p>
    <p>Number of Users: <%= user_count %></p> <br>
<% end %>